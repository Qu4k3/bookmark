<div class="container">
  <div class="well">
    <%= link_to "<span class='glyphicon glyphicon-plus' aria-hidden='true'></span> &nbsp;New book".html_safe, new_book_path, remote: true, class: "btn btn-success" %>
  </div>
  <div class="new-book"></div>

  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Description</th>
        <th>Editorial</th>
        <th>WoL</th>
        <th>CwR</th>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
      </tr>
    </thead>
    <tbody class="book-index">
      <%= render "list" %>
    </tbody>
  </table>
</div>
<div id="book-modal" class="modal fade"></div>